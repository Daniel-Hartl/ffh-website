<Window x:Class="FFH_Website_Manager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FFH_Website_Manager"
        mc:Ignorable="d"
        xmlns:views="clr-namespace:FFH_Website_Manager.Views"
        Title="FFH-Website Manager" Height="450" Width="800">
    <TabControl>
        <TabItem Header="Artikel">
            <views:Articles/>
        </TabItem>
        <TabItem Header="Galerie">
            <views:Gallery/>
        </TabItem>
        <TabItem Header="Vorstandschaft">
            <views:Board/>
        </TabItem>
        <TabItem Header="Aktive Mannschaft">
            <views:Crew/>
        </TabItem>
    </TabControl>
</Window>
